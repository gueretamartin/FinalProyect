        <a href="@Url.Action("Create", "Ventas")" class="btn btn-primary " role="button" id="btn-Nuevo">AGREGAR NUEVO VENTA</a>
        <div class="mdl-tooltip" for="btn-Nuevo">Agregar Venta</div>
    </p>*@    

</section>

