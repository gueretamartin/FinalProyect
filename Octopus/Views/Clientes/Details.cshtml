@using Octopus.Models
@model Octopus.Models.CLIENTES
@using System.Web.UI.WebControls

@{
    ViewBag.Title = "Clientes - Detalle";
    Layout = "~/Views/Shared/_HomePanel.cshtml";
}

@if (@Model.CLI_CONDICIONIVA.Equals("CONSUMIDOR_FINAL"))
{
    @:ShowCF();
}
else if (@Model.CLI_CONDICIONIVA.Equals("RESPONSABLE_INSCRIPTO"))
{
    @:ShowRI();
}



<!-- pageContent -->
<section class="full-width pageContent">
    <div>
        <div class="mdl-tabs__tab-bar">
            <a href="@Url.Action("Create","Clientes")" class="mdl-tabs__tab">NUEVO</a>
            <a href="@Url.Action("List","Clientes")" class="mdl-tabs__tab">LISTA</a>
            <a href="@Url.Action("Edit","Clientes")" class="mdl-tabs__tab" style="color: #2e6da4">DETALLES</a>
        </div>
        <div class="mdl-tabs__panel is-active" id="tabNewAdmin">
            <div class="mdl-grid">
                <div class="mdl-cell mdl-cell--4-col-phone mdl-cell--8-col-tablet mdl-cell--12-col-desktop">
                    <div class="full-width panel mdl-shadow--2dp">
                        <div class="full-width panel-tittle bg-primary text-center tittles">
                            DETALLES CLIENTE
                        </div>
                        <div class="full-width panel-content">
                            @using (Html.BeginForm("Acciones", "Clientes", new { cli_id = @Model.CLI_ID }, FormMethod.Post, new { enctype = "multipart/form-data" }))
                            {
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(true)
                                
                                //Valor de variable de session CONDICION IVA
                                <input type="hidden" value="@Session["CONDICIONIVA"]" id="myHiddenVar" />
                                <div class="mdl-grid">
                                    <div class="mdl-textfield mdl-js-textfield">
                                        @Html.TextBoxFor(a => a.CLI_CONDICIONIVA, new { @class = "mdl-textfield__input", @id="CONDICIONIVA", @typeof = "text", tabindex = "3", disabled = "disabled", @Style = "color:dimgrey" })
                                    </div>

                                    <div id="PersonalesL" class="mdl-cell mdl-cell--4-col-phone mdl-cell--8-col-tablet mdl-cell--6-col-desktop">
                                        <h5 class="text-condensedLight" style="color: #2e6da4">DATOS PERSONALES</h5>
                                        <div class="mdl-textfield mdl-js-textfield">
                                            @Html.TextBoxFor(a => a.CLI_CF_TIPODOC, new { @class = "mdl-textfield__input", @typeof = "text", tabindex = "3", disabled = "disabled", @Style = "color:dimgrey" })
                                            <label class="mdl-textfield__label" for="NameAdmin" style="color: #2e6da4">Tipo Doc</label>
                                            <div>@Html.ValidationMessageFor(a => a.CLI_CF_TIPODOC)</div>
                                        </div>
                                        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                                            @Html.TextBoxFor(a => a.CLI_CF_NOMBRE, new { @class = "mdl-textfield__input", @typeof = "text", tabindex = "3", disabled = "disabled", @Style = "color:dimgrey" })
                                            <label class="mdl-textfield__label" for="NameAdmin" style="color: #2e6da4">Nombre</label>
                                            <div>@Html.ValidationMessageFor(a => a.CLI_CF_NOMBRE)</div>
                                        </div>
                                        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                                            @Html.TextBoxFor(a => a.CLI_CF_DIRECCION, new { @class = "mdl-textfield__input", @typeof = "text", tabindex = "5", disabled = "disabled", @Style = "color:dimgrey" })
                                            <label class="mdl-textfield__label" for="NameAdmin" style="color: #2e6da4">Dirección</label>
                                            <div>@Html.ValidationMessageFor(a => a.CLI_CF_DIRECCION)</div>
                                        </div>
                                        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                                            @Html.TextBoxFor(a => a.CLI_CF_PROVINCIA, new { @class = "mdl-textfield__input", @typeof = "text", tabindex = "7", disabled = "disabled", @Style = "color:dimgrey" })
                                            <label class="mdl-textfield__label" for="NameAdmin" style="color: #2e6da4">Provincia</label>
                                            <div>@Html.ValidationMessageFor(a => a.CLI_CF_PROVINCIA)</div>
                                        </div>
                                        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                                            @Html.TextBoxFor(a => a.CLI_CF_EMAIL, new { @class = "mdl-textfield__input", @typeof = "text", tabindex = "9", disabled = "disabled", @Style = "color:dimgrey" })
                                            <label class="mdl-textfield__label" for="NameAdmin" style="color: #2e6da4">E - Mail</label>
                                            <div>@Html.ValidationMessageFor(a => a.CLI_CF_EMAIL)</div>
                                        </div>
                                        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                                            @Html.TextBoxFor(a => a.CLI_CF_TELEFONO, new { @class = "mdl-textfield__input", @typeof = "number", tabindex = "11", disabled = "disabled", @Style = "color:dimgrey" })
                                            <label class="mdl-textfield__label" for="NameAdmin" style="color: #2e6da4">Teléfono</label>
                                            <div>@Html.ValidationMessageFor(a => a.CLI_CF_TELEFONO)</div>
                                        </div>
                                    </div>

