@model Octopus.Models.RESERVAS
@using Octopus.Models
@using System.Web.UI.WebControls

@{
    ViewBag.Title = "Reservas - Editar";
    Layout = "~/Views/Shared/_HomePanel.cshtml";
}

<!-- pageContent -->
<section class="full-width pageContent">
    <div id="help">
        <div class="text-right" style="padding-top:15px; padding-right:15px;">
            <button id="btn-exit" type="button" class="btn btn-info help"><i class="zmdi zmdi-pin-help"></i> Ayuda</button>

        </div>
    </div>
    <div>
        <div class="mdl-tabs__tab-bar">
            <a href="@Url.Action("List", "Reservas")" class="mdl-tabs__tab" id="btn-ResNuevo">ACTIVAS</a>
            <div class="mdl-tooltip" for="btn-ResNuevo">Reservas Activas</div>
            <a href="@Url.Action("ListVencidas", "Reservas")" class="mdl-tabs__tab" id="btn-ResVencidas">VENCIDAS</a>
            <div class="mdl-tooltip" for="btn-ResVencidas">Reservas Vencidas</div>
            <a href="@Url.Action("ListCanceladas", "Reservas")" class="mdl-tabs__tab" id="btn-ResCanceladas">CANCELADAS</a>
            <div class="mdl-tooltip" for="btn-ResCanceladas">Reservas Canceladas</div>
            <a href="@Url.Action("List", "Reservas")" class="mdl-tabs__tab" style="color: #2e6da4" id="btn-ResDetalle">DETALLES</a>
            <div class="mdl-tooltip" for="btn-ResDetalle">Detalle de Reserva</div>
        </div>
        <div class="mdl-tabs__panel is-active" id="tabNewAdmin">
            <div class="mdl-grid">
                <div class="mdl-cell mdl-cell--4-col-phone mdl-cell--8-col-tablet mdl-cell--12-col-desktop">
                    <div class="full-width panel mdl-shadow--2dp">
                        <div class="full-width header-well">

                            <div class="full-width header-well-icon">
                                <i class="zmdi zmdi-edit"></i>
                            </div>
                            <div class="full-width header-well-text">
                                <p class="text-condensedLight">
                                    <b>EDITAR RESERVA</b><br />
                                    Complete los valores que desea editar y luego guarde los cambios.
                                </p>
                                <br />
                            </div>
                        </div>
                       
                        <div class="full-width panel-content">

                            @using (Html.BeginForm("Edit", "Reservas", new { res_id = @Model.RES_ID }, FormMethod.Post, new { enctype = "multipart/form-data" }))
                            {
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(true)
                                
                                <div class="text-condensedLight" style="text-align: center; color: black; background-color: #ff4d4d; width:40%; margin-left:30%; margin-right:30%;">@Html.ValidationMessageFor(a => a.FEC_ID_FIN)</div>
                                <div class="text-condensedLight" style="text-align: center; color: black; background-color: #ff4d4d; width:40%; margin-left:30%; margin-right:30%;">@Html.ValidationMessageFor(a => a.RES_SENIA)</div>
                                <div class="text-condensedLight" style="text-align: center; color: black; background-color: #ff4d4d; width:40%; margin-left:30%; margin-right:30%;">@Html.ValidationMessageFor(a => a.RES_VALOR_PACTADO)</div>
                                <div class="mdl-grid">
                                    <div id="ReservaLU" class="mdl-cell mdl-cell--4-col-phone mdl-cell--8-col-tablet mdl-cell--6-col-desktop">
                                        @Html.HiddenFor(a => a.VEH_ID, new { @class = "mdl-textfield__input", @typeof = "text", tabindex = "14" })
                                        @Html.HiddenFor(a => a.FEC_ID_INICIO, new { @class = "mdl-textfield__input", @typeof = "text", tabindex = "14" })
                                        @Html.HiddenFor(a => a.CLI_ID, new { @class = "mdl-textfield__input", @typeof = "text", tabindex = "14" })
                                        @Html.HiddenFor(a => a.EMP_ID, new { @class = "mdl-textfield__input", @typeof = "text", tabindex = "14" })
                                        @Html.HiddenFor(a => a.SUC_ID, new { @class = "mdl-textfield__input", @typeof = "text", tabindex = "14" })
                                        @Html.HiddenFor(a => a.FEC_ID_INICIO, new { @class = "mdl-textfield__input", @typeof = "text", tabindex = "14" })
                                        <h5 class="text-condensedLight" style="color: #2e6da4">VEHÍCULO SELECCIONADO</h5>
                                        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                                            @Html.TextBoxFor(a => a.VEHICULOS.VEH_FIRSTS_DETAILS, new { @class = "mdl-textfield__input", @typeof = "text", tabindex = "1", disabled = "disabled", @Style = "color:dimgrey" })
                                            <a class="mdl-list__item-secondary-action" href="@Url.Action("Details", "Vehiculos", new { veh_id = Model.VEHICULOS.VEH_ID })" target="_blank"><i class="zmdi zmdi-more" style="color: #2e6da4"></i></a>
                                            <label class="mdl-textfield__label" for="NameAdmin" style="color: #2e6da4">VERSIÓN</label>
                                        </div>
                                        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                                            @Html.TextBoxFor(a => a.VEHICULOS.SUCURSALES.SUC_DESCRIP, new { @class = "mdl-textfield__input", @typeof = "text", tabindex = "3", disabled = "disabled", @Style = "color:dimgrey" })
                                            <label class="mdl-textfield__label" for="NameAdmin" style="color: #2e6da4">SUCURSAL ACTUAL</label>
                                        </div>
                                    </div>

                                    <div id="ReservaRU" class="mdl-cell mdl-cell--4-col-phone mdl-cell--8-col-tablet mdl-cell--6-col-desktop">
                                        <h5 class="text-condensedLight">  &nbsp;</h5>
                                        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                                            @Html.TextBoxFor(a => a.VEHICULOS.VEH_SECONDS_DETAILS, new { @class = "mdl-textfield__input", @typeof = "text", tabindex = "2", disabled = "disabled", @Style = "color:dimgrey" })
                                            <a class="mdl-list__item-secondary-action" href="@Url.Action("Details", "Vehiculos", new { veh_id = Model.VEHICULOS.VEH_ID })" target="_blank"><i class="zmdi zmdi-more" style="color: #FFFFFF"></i></a>
                                            <label class="mdl-textfield__label" for="NameAdmin" style="color: #2e6da4">DETALLES</label>
                                        </div>
                                        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                                            @Html.TextBoxFor(a => a.VEHICULOS.EMPLEADOS.EMP_APELLIDO_NOMBRE, new { @class = "mdl-textfield__input", @typeof = "text", tabindex = "4", disabled = "disabled", @Style = "color:dimgrey" })
                                            <label class="mdl-textfield__label" for="NameAdmin" style="color: #2e6da4">EMPLEADO RECEPCIONISTA</label>
                                        </div>
                                    </div>

                                    <div id="ReservaLM" class="mdl-cell mdl-cell--4-col-phone mdl-cell--8-col-tablet mdl-cell--6-col-desktop">
                                        <h5 class="text-condensedLight" style="color: #2e6da4">CLIENTE COMPRADOR</h5>
                                        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                                            @Html.TextBoxFor(a => a.CLIENTES.TIPO_CLIENTE.TC_DESCRIPCION, new { @class = "mdl-textfield__input", @typeof = "text", tabindex = "5", disabled = "disabled", @Style = "color:dimgrey" })
                                            <a class="mdl-list__item-secondary-action" href="@Url.Action("Details", "Clientes", new { cli_id = Model.CLI_ID})" target="_blank"><i class="zmdi zmdi-more" style="color: #2e6da4"></i></a>
                                            <label class="mdl-textfield__label" for="NameAdmin" style="color: #2e6da4">TIPO DE IVA</label>
                                        </div>
                                    </div>

                                    <div id="ReservaRM" class="mdl-cell mdl-cell--4-col-phone mdl-cell--8-col-tablet mdl-cell--6-col-desktop">
                                        <h5 class="text-condensedLight">  &nbsp;</h5>
                                        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                                            @if (Model.CLIENTES.TC_ID.Equals(1))
                                            {
                                                @Html.TextBoxFor(a => a.CLIENTES.CLI_APELLIDO_NOMBRE, new { @class = "mdl-textfield__input", @typeof = "text", tabindex = "6", disabled = "disabled", @Style = "color:dimgrey" })
                                                <label class="mdl-textfield__label" for="NameAdmin" style="color: #2e6da4">APELLIDO Y NOMBRE</label>
                                            }
                                            else
                                            {
                                                @Html.TextBoxFor(a => a.CLIENTES.CLI_RI_RAZONSOCIAL, new { @class = "mdl-textfield__input", @typeof = "text", tabindex = "6", disabled = "disabled", @Style = "color:dimgrey" })
                                                <label class="mdl-textfield__label" for="NameAdmin" style="color: #2e6da4">APELLIDO Y NOMBRE</label>
                                            }

                                        </div>
                                    </div>

                                    <div id="ReservaLD" class="mdl-cell mdl-cell--4-col-phone mdl-cell--8-col-tablet mdl-cell--12-col-desktop">
                                        <h5 class="text-condensedLight" style="color: #2e6da4">DETALLES DE RESERVA</h5>
                                        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label mdl-cell mdl-cell--4-col-phone mdl-cell--8-col-tablet mdl-cell--5-col-desktop">
                                            @Html.TextBoxFor(a => a.SUCURSALES.SUC_DESCRIP, new { @class = "mdl-textfield__input", @typeof = "text", tabindex = "7", disabled = "disabled", @Style = "color:dimgrey" })
                                            <label class="mdl-textfield__label" for="NameAdmin" style="color: #2e6da4">SUCURSAL</label>
                                        </div>
                                        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label mdl-cell mdl-cell--4-col-phone mdl-cell--8-col-tablet mdl-cell--5-col-desktop">
                                            @Html.TextBoxFor(a => a.EMPLEADOS.EMP_APELLIDO_NOMBRE, new { @class = "mdl-textfield__input", @typeof = "text", tabindex = "10", disabled = "disabled", @Style = "color:dimgrey" })
                                            <label class="mdl-textfield__label" for="NameAdmin" style="color: #2e6da4">EMPLEADO VENDEDOR</label>
                                        </div>
                                    </div>
                                       

                                    <div id="ValorSenia" class="mdl-cell mdl-cell--4-col-phone mdl-cell--8-col-tablet mdl-cell--12-col-desktop">
                                       
                                        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label mdl-cell mdl-cell--4-col-phone mdl-cell--8-col-tablet mdl-cell--5-col-desktop">
                                            @Html.TextBoxFor(a => a.RES_SENIA, new { @class = "mdl-textfield__input", @typeof = "text", tabindex = "9", Model.RES_SENIA })
                                            <label class="mdl-textfield__label" for="NameAdmin" style="color: #2e6da4">VALOR DE SEÑA ($ARS)</label>
                                        </div>
                                         <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label mdl-cell mdl-cell--4-col-phone mdl-cell--8-col-tablet mdl-cell--5-col-desktop">
                                            @Html.TextBoxFor(a => a.RES_VALOR_PACTADO, new { @class = "mdl-textfield__input", @typeof = "text", tabindex = "12", Value = Model.RES_VALOR_PACTADO })
                                            <label class="mdl-textfield__label" for="NameAdmin" style="color: #2e6da4">VALOR PACTADO ($ARS)</label>
                                        </div>


                                    </div>
                                    <div id="DatosFecha" class="mdl-cell mdl-cell--4-col-phone mdl-cell--8-col-tablet mdl-cell--12-col-desktop">
                                        <h5 class="text-condensedLight" style="color: #2e6da4"></h5>
                                        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label mdl-cell mdl-cell--4-col-phone mdl-cell--8-col-tablet mdl-cell--5-col-desktop">
                                            @Html.TextBoxFor(a => a.FECHAS.FEC_FECHA, new { @class = "mdl-textfield__input", @typeof = "text", tabindex = "11", Value = String.Format("{0:dd/MM/yyyy}", Model.FECHAS.FEC_FECHA), disabled = "disabled", @Style = "color:dimgrey" })
                                            <label class="mdl-textfield__label" for="NameAdmin" style="color: #2e6da4">FECHA INICIO</label>
                                        </div>
                                    </div>
                                    <div id="DatosFechaH" class="mdl-cell mdl-cell--4-col-phone mdl-cell--8-col-tablet mdl-cell--12-col-desktop">

                                        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label mdl-cell mdl-cell--4-col-phone mdl-cell--8-col-tablet mdl-cell--5-col-desktop">
                                            <label class="" for="NameAdmin" style="color: #2e6da4;margin-bottom:3px;">Fecha Hasta* (Validez de la Reserva)</label>
                                            <input type="date" class="mdl-textfield__input" name="fechaResFin" value="@Model.FechaHastaEdicion" required>
                                        </div>
                                        </div>
                                    </div>

                                <p class="text-center">
                                    <button class="mdl-button mdl-js-button mdl-button--fab mdl-js-ripple-effect mdl-button--colored bg-primary" id="btn-addAdmin">
                                        <i class="zmdi zmdi-save" style="display: inline-block; font: normal normal normal 14px/1"></i>
                                    </button>
                                    <div class="mdl-tooltip" for="btn-EditRes">Guardar Cambios</div>
                                </p>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
